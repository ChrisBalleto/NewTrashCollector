@model Trash.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "AddVacation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
<div class="col-md-4">
</div>
<div class="col-md-4">

    <h2>Vacation</h2>

    @using (Html.BeginForm("SaveVacation", "Customers"))
            {
        <div class="form-group">
            @Html.LabelFor(m=> m.Customer.LastName)
            @Html.TextBoxFor(m => m.Customer.LastName, new { @class = "form-control" })
        </div>
        <div>
            <label>
                @Html.LabelFor(m => m.Vacation.StartVacation)
                @Html.TextBoxFor(m => m.Vacation.StartVacation, new { @class = "form-control" })
            </label>
        </div>
        <div>
            <label>
                @Html.LabelFor(m => m.Vacation.EndVacation)
                @Html.TextBoxFor(m => m.Vacation.EndVacation, new { @class = "form-control" })
            </label>
        </div>

                @Html.HiddenFor(m => m.Vacation.Id)
                <asp:button id=" backButton" class="btn btn-primary">Submit</asp:button>
    }


</div>
<div class="col-md-4">
</div>
    </div>


